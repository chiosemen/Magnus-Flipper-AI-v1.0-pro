# ==========================================
# Application
# ==========================================
APP_BRAND=flipper
NODE_ENV=development
PORT=4000

# ==========================================
# Supabase Database
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE=your-service-role-key

# For frontend (Next.js)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ==========================================
# API Configuration
# ==========================================
API_URL=http://localhost:4000
NEXT_PUBLIC_SITE_URL=https://flipperagents.com

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=info

# ==========================================
# Rate Limiting
# ==========================================
REDIS_URL=redis://localhost:6379
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Legacy budget guard settings
BUDGET_ALERTS_RATE_PER_MIN=60
BUDGET_LLM_TOKENS_PER_MIN=30000
BUDGET_BURST_MULTIPLIER=2

# ==========================================
# Monitoring & Error Tracking
# ==========================================
SENTRY_DSN=
SENTRY_ENV=production
SENTRY_RELEASE=$COMMIT_SHA

# If using sentry-cli in CI:
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT_WEB=magnus-flipper-web
SENTRY_PROJECT_API=magnus-flipper-api

# ==========================================
# External Services (Optional)
# ==========================================
OPENAI_API_KEY=
DISCORD_WEBHOOK_URL=

# ==========================================
# Telegram Bot Configuration
# ==========================================
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_BOT_USERNAME=MagnusFlipperBot
TELEGRAM_BOT_SECRET=your-secret-for-webhook-verification
TELEGRAM_CHAT_ID=

# ==========================================
# WhatsApp / Twilio (Optional)
# ==========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# ==========================================
# Crawler / Queue Configuration
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
DATABASE_URL=postgresql://localhost:5432/magnus
