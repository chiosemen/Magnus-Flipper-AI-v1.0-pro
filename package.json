{
  "name": "magnus-flipper-ai",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build && pnpm -r --filter './apps/*' build",
    "dev:api": "pnpm --filter api dev",
    "dev:scheduler": "pnpm --filter scheduler dev",
    "dev:worker-crawler": "pnpm --filter worker-crawler dev",
    "dev:worker-analyzer": "pnpm --filter worker-analyzer dev",
    "dev:worker-alerts": "pnpm --filter worker-alerts dev",
    "dev:bot-telegram": "pnpm --filter bot-telegram dev",
    "start:api": "pnpm --filter api start",
    "start:scheduler": "pnpm --filter scheduler start",
    "start:worker-crawler": "pnpm --filter worker-crawler start",
    "start:worker-analyzer": "pnpm --filter worker-analyzer start",
    "start:worker-alerts": "pnpm --filter worker-alerts start",
    "start:bot-telegram": "pnpm --filter bot-telegram start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "deploy:check": "bash scripts/deploy-check.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "ts-node-dev": "^2.0.0"
  }
}
