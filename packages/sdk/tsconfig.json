{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@magnus-flipper-ai/sdk/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
